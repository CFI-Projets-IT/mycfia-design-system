{% extends 'layouts/app.html.twig' %}

{% block title %}Stock - myCFiia{% endblock %}

{% block main_content %}
<div class="container-fluid" data-controller="datatable">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Gestion du Stock</h2>
                <a href="{{ path('app_stock_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouveau stock
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Inventaire ({{ stocks|length }} articles)</h5>
                        <div class="input-group" style="max-width: 300px;">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Rechercher..."
                                data-datatable-target="search"
                                data-action="input->datatable#filter"
                            >
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" data-datatable-target="table">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                    <th>Valeur totale</th>
                                    <th>Date de création</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stock in stocks %}
                                    <tr>
                                        <td><strong>{{ stock.name }}</strong></td>
                                        <td>
                                            <span class="badge bg-{{ stock.quantity < 50 ? 'danger' : (stock.quantity < 100 ? 'warning' : 'success') }}">
                                                {{ stock.quantity }}
                                            </span>
                                        </td>
                                        <td>{{ stock.unitPrice }} €</td>
                                        <td><strong>{{ (stock.quantity * stock.unitPrice)|number_format(2, ',', ' ') }} €</strong></td>
                                        <td>{{ stock.createdAt|date('d/m/Y') }}</td>
                                        <td class="text-end">
                                            <a href="{{ path('app_stock_show', {id: stock.id}) }}" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_stock_edit', {id: stock.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucun stock trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
