{% extends 'layouts/app.html.twig' %}

{% block title %}Factures - myCFiia{% endblock %}

{% block main_content %}
<div class="container-fluid" data-controller="datatable">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Factures</h2>
<a href="{{ path('app_facture_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle facture
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Liste des factures ({{ factures|length }})</h5>
                        <div class="input-group" style="max-width: 300px;">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Rechercher..."
                                data-datatable-target="search"
                                data-action="input->datatable#filter"
                            >
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" data-datatable-target="table">
                            <thead>
                                <tr>
                                    <th>Référence</th>
                                    <th>Montant total</th>
                                    <th>Statut</th>
                                    <th>Date facture</th>
                                    <th>Date de création</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for facture in factures %}
                                    <tr>
                                        <td><strong>{{ facture.reference }}</strong></td>
                                        <td><strong>{{ facture.totalAmount|number_format(2, ',', ' ') }} €</strong></td>
                                        <td>
                                            <span class="badge bg-{{ facture.status == 'paid' ? 'success' : (facture.status == 'pending' ? 'warning' : 'danger') }}">
                                                {{ facture.status == 'paid' ? 'Payée' : (facture.status == 'pending' ? 'En attente' : 'Impayée') }}
                                            </span>
                                        </td>
                                        <td>{{ facture.invoiceDate|date('d/m/Y') }}</td>
                                        <td>{{ facture.createdAt|date('d/m/Y H:i') }}</td>
                                        <td class="text-end">
                                            <a href="{{ path('app_facture_show', {id: facture.id}) }}" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_facture_edit', {id: facture.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucune facture trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
