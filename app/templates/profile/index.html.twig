{% extends 'layouts/home.html.twig' %}

{% block title %}{{ 'profile.page.title'|trans({}, 'profile') }} - myCFiia{% endblock %}

{% block content %}
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                {# En-tÃªte #}
                <div class="mb-4">
                    <h1 class="h3 mb-2">
                        <i class="bi bi-person-circle me-2"></i>{{ 'profile.page.title'|trans({}, 'profile') }}
                    </h1>
                    <p class="text-muted">
                        {{ 'profile.page.description'|trans({}, 'profile') }}
                    </p>
                </div>

                {# Informations utilisateur #}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white d-flex align-items-center gap-2">
                        <i class="bi bi-person-badge"></i>
                        <strong>{{ 'profile.section.info.title'|trans({}, 'profile') }}</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover mb-0">
                            <tbody>
                                <tr>
                                    <th style="width: 40%;">
                                        <i class="bi bi-person me-2 text-muted"></i>{{ 'profile.field.fullname.label'|trans({}, 'profile') }}
                                    </th>
                                    <td><strong class="fs-5">{{ user.fullName }}</strong></td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="bi bi-envelope me-2 text-muted"></i>{{ 'profile.field.email.label'|trans({}, 'profile') }}
                                    </th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="bi bi-building me-2 text-muted"></i>{{ 'profile.field.organization.label'|trans({}, 'profile') }}
                                    </th>
                                    <td>
                                        {% if user.division %}
                                            <span class="badge bg-info">{{ user.division.nomDivision }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="bi bi-key me-2 text-muted"></i>{{ 'profile.field.id_cfi.label'|trans({}, 'profile') }}
                                    </th>
                                    <td><code class="text-info">{{ user.idCfi }}</code></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Statistiques d'utilisation #}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white d-flex align-items-center gap-2">
                        <i class="bi bi-graph-up"></i>
                        <strong>{{ 'profile.section.stats.title'|trans({}, 'profile') }}</strong>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            {# Membre depuis #}
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                                    <div class="text-primary fs-1">
                                        <i class="bi bi-calendar-check"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">{{ 'profile.stats.member_since.label'|trans({}, 'profile') }}</div>
                                        <div class="fw-bold">{{ user.createdAt|date('d/m/Y') }}</div>
                                        <div class="text-muted small">{{ 'profile.stats.member_since.days'|trans({'%days%': "now"|date('U') - user.createdAt.timestamp|date('U')|abs / 86400|round(0, 'floor')}, 'profile') }}</div>
                                    </div>
                                </div>
                            </div>

                            {# DerniÃ¨re connexion #}
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                                    <div class="text-success fs-1">
                                        <i class="bi bi-clock-history"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">{{ 'profile.stats.last_login.label'|trans({}, 'profile') }}</div>
                                        {% if user.lastLoginAt %}
                                            <div class="fw-bold">{{ user.lastLoginAt|date('d/m/Y H:i') }}</div>
                                        {% else %}
                                            <div class="text-muted">-</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {# Nombre de connexions #}
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                                    <div class="text-info fs-1">
                                        <i class="bi bi-bar-chart-line"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">{{ 'profile.stats.login_count.label'|trans({}, 'profile') }}</div>
                                        <div class="fw-bold fs-4">{{ user.loginCount }}</div>
                                        <div class="text-muted small">{{ 'profile.stats.login_count.connections'|trans({}, 'profile') }}</div>
                                    </div>
                                </div>
                            </div>

                            {# DerniÃ¨re mise Ã  jour #}
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-3 p-3 bg-light rounded">
                                    <div class="text-warning fs-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">{{ 'profile.stats.updated_at.label'|trans({}, 'profile') }}</div>
                                        <div class="fw-bold">{{ user.updatedAt|date('d/m/Y H:i') }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# PrÃ©fÃ©rences actuelles #}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white d-flex align-items-center gap-2">
                        <i class="bi bi-sliders"></i>
                        <strong>{{ 'profile.section.preferences.title'|trans({}, 'profile') }}</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="text-muted small mb-1">{{ 'profile.preferences.theme.label'|trans({}, 'profile') }}</div>
                                <div class="d-flex align-items-center gap-2">
                                    {% if user.theme == 'light' %}
                                        <i class="bi bi-sun-fill text-warning"></i>
                                        <span class="badge bg-warning text-dark">{{ 'profile.preferences.theme.light'|trans({}, 'profile') }}</span>
                                    {% elseif user.theme == 'dark-blue' %}
                                        <i class="bi bi-moon-stars-fill text-primary"></i>
                                        <span class="badge bg-primary">{{ 'profile.preferences.theme.dark_blue'|trans({}, 'profile') }}</span>
                                    {% elseif user.theme == 'dark-red' %}
                                        <i class="bi bi-moon-fill text-danger"></i>
                                        <span class="badge bg-danger">{{ 'profile.preferences.theme.dark_red'|trans({}, 'profile') }}</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="text-muted small mb-1">{{ 'profile.preferences.locale.label'|trans({}, 'profile') }}</div>
                                <div class="d-flex align-items-center gap-2">
                                    {% if user.locale == 'fr' %}
                                        <span>ðŸ‡«ðŸ‡·</span>
                                        <span class="badge bg-secondary">{{ 'profile.preferences.locale.french'|trans({}, 'profile') }}</span>
                                    {% else %}
                                        <span>ðŸ‡¬ðŸ‡§</span>
                                        <span class="badge bg-secondary">{{ 'profile.preferences.locale.english'|trans({}, 'profile') }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <a href="{{ path('settings_index') }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-gear me-2"></i>{{ 'profile.button.edit_settings'|trans({}, 'profile') }}
                            </a>
                        </div>
                    </div>
                </div>

                {# Actions #}
                <div class="d-flex gap-2 justify-content-between">
                    <a href="{{ path('home_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>{{ 'profile.button.back'|trans({}, 'profile') }}
                    </a>

                    <a href="https://test.cfitech.io/" target="_blank" class="btn btn-outline-info">
                        <i class="bi bi-box-arrow-up-right me-2"></i>{{ 'profile.button.manage_cfi'|trans({}, 'profile') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
