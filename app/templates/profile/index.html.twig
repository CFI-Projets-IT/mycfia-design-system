{% extends 'layouts/home.html.twig' %}

{% block title %}{{ 'profile.page.title'|trans({}, 'profile') }} - myCFiia{% endblock %}

{% block content %}
<div class="container" style="max-width: 1000px;">
    <div class="text-center py-5">
        {# En-tÃªte #}
        <div class="d-inline-block text-start mb-5">
            <h1 class="fs-1 fw-semibold mb-2 text-primary">
                {{ 'profile.page.title'|trans({}, 'profile') }}
            </h1>
            <p class="fs-4 fw-medium text-primary mb-0">{{ 'profile.page.description'|trans({}, 'profile') }}</p>
        </div>

        {# Informations personnelles #}
        <div class="mb-4">
            <h2 class="fs-5 fw-semibold text-primary mb-3 text-start">
                <i class="bi bi-person-circle me-2"></i>{{ 'profile.section.info.title'|trans({}, 'profile') }}
            </h2>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-person fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.field.fullname.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.fullName }}</h3>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-envelope fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.field.email.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.email }}</h3>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-building fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.field.organization.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">
                                {% if user.division %}
                                    {{ user.division.nomDivision }}
                                {% else %}
                                    -
                                {% endif %}
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-key fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.field.id_cfi.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0"><code class="text-info">{{ user.idCfi }}</code></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# PrÃ©fÃ©rences #}
        <div class="mb-4">
            <h2 class="fs-5 fw-semibold text-primary mb-3 text-start">
                <i class="bi bi-sliders me-2"></i>{{ 'profile.section.preferences.title'|trans({}, 'profile') }}
            </h2>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        {% if user.theme == 'light' %}
                            <i class="bi bi-sun-fill fs-2 text-primary flex-shrink-0"></i>
                        {% elseif user.theme == 'dark-blue' %}
                            <i class="bi bi-moon-stars-fill fs-2 text-primary flex-shrink-0"></i>
                        {% elseif user.theme == 'dark-red' %}
                            <i class="bi bi-moon-fill fs-2 text-primary flex-shrink-0"></i>
                        {% endif %}
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.preferences.theme.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">
                                {% if user.theme == 'light' %}
                                    {{ 'profile.preferences.theme.light'|trans({}, 'profile') }}
                                {% elseif user.theme == 'dark-blue' %}
                                    {{ 'profile.preferences.theme.dark_blue'|trans({}, 'profile') }}
                                {% elseif user.theme == 'dark-red' %}
                                    {{ 'profile.preferences.theme.dark_red'|trans({}, 'profile') }}
                                {% endif %}
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        {% if user.locale == 'fr' %}
                            <span class="fs-2 flex-shrink-0">ðŸ‡«ðŸ‡·</span>
                        {% else %}
                            <span class="fs-2 flex-shrink-0">ðŸ‡¬ðŸ‡§</span>
                        {% endif %}
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.preferences.locale.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">
                                {% if user.locale == 'fr' %}
                                    {{ 'profile.preferences.locale.french'|trans({}, 'profile') }}
                                {% else %}
                                    {{ 'profile.preferences.locale.english'|trans({}, 'profile') }}
                                {% endif %}
                            </h3>
                        </div>
                    </div>
                </div>

                <a href="{{ path('settings_index') }}" class="card text-decoration-none shadow-sm quick-access-card" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-gear fs-2 text-primary flex-shrink-0"></i>
                        <h3 class="fs-6 fw-semibold text-primary mb-0">{{ 'profile.button.edit_settings'|trans({}, 'profile') }}</h3>
                    </div>
                </a>
            </div>
        </div>

        {# Statistiques d'utilisation #}
        <div class="mb-5">
            <h2 class="fs-5 fw-semibold text-primary mb-3 text-start">
                <i class="bi bi-graph-up me-2"></i>{{ 'profile.section.stats.title'|trans({}, 'profile') }}
            </h2>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-calendar-check fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.stats.member_since.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.createdAt|date('d/m/Y') }}</h3>
                            <small class="text-muted">{{ 'profile.stats.member_since.days'|trans({'%days%': "now"|date('U') - user.createdAt.timestamp|date('U')|abs / 86400|round(0, 'floor')}, 'profile') }}</small>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-clock-history fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.stats.last_login.label'|trans({}, 'profile') }}</small>
                            {% if user.lastLoginAt %}
                                <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.lastLoginAt|date('d/m/Y') }}</h3>
                                <small class="text-muted">{{ user.lastLoginAt|date('H:i') }}</small>
                            {% else %}
                                <h3 class="fs-6 fw-semibold text-primary mb-0">-</h3>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-bar-chart-line fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.stats.login_count.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.loginCount }}</h3>
                            <small class="text-muted">{{ 'profile.stats.login_count.connections'|trans({}, 'profile') }}</small>
                        </div>
                    </div>
                </div>

                <div class="card text-decoration-none shadow-sm" style="min-width: 180px;">
                    <div class="card-body d-flex align-items-center gap-3 p-3">
                        <i class="bi bi-pencil-square fs-2 text-primary flex-shrink-0"></i>
                        <div class="text-start">
                            <small class="text-muted d-block">{{ 'profile.stats.updated_at.label'|trans({}, 'profile') }}</small>
                            <h3 class="fs-6 fw-semibold text-primary mb-0">{{ user.updatedAt|date('d/m/Y') }}</h3>
                            <small class="text-muted">{{ user.updatedAt|date('H:i') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Boutons d'action #}
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="{{ path('home_index') }}" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>{{ 'profile.button.back'|trans({}, 'profile') }}
            </a>
            <a href="https://test.cfitech.io/" target="_blank" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-box-arrow-up-right me-2"></i>{{ 'profile.button.manage_cfi'|trans({}, 'profile') }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
