                    {# Quota TÃ©lÃ©chargement HD #}
                    {% if user.permissions.telechargementHD is defined %}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-download"></i> {{ 'profile.permissions.quota.title'|trans({}, 'profile') }}</h6>
                        <div class="card text-center shadow-sm quick-access-card-compact">
                            <div class="card-body p-3">
                                <h3 class="fw-semibold text-primary mb-0">{{ user.permissions.telechargementHD|number_format(1, ',', ' ') }} Go</h3>
                                <small class="opacity-75">{{ 'profile.permissions.quota.hd_download'|trans({}, 'profile') }}</small>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {# Boutons d'action #}
        <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
            <a href="{{ path('home_index') }}" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>{{ 'profile.button.back'|trans({}, 'profile') }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
