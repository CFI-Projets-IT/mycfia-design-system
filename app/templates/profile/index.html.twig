{% extends 'layouts/home.html.twig' %}

{% block title %}{{ 'profile.page.title'|trans({}, 'profile') }} - myCFiia{% endblock %}

{% block content_classes %} profile-page{% endblock %}

{% block content %}
<div class="container" style="max-width: 1000px;">
    <div class="text-center py-5">
        {# En-tÃªte #}
        <div class="d-inline-block text-start mb-5">
            <h1 class="fs-1 fw-semibold mb-2 text-primary">
                {{ 'profile.page.title'|trans({}, 'profile') }}
            </h1>
            <p class="fs-4 fw-medium text-primary mb-0">{{ 'profile.page.description'|trans({}, 'profile') }}</p>
        </div>

        <div class="row g-4 mb-4">
            {# Colonne gauche - Informations personnelles #}
            <div class="col-lg-6">
                <div class="card shadow-sm h-100 text-start">
                    <div class="card-header glass-primary text-primary d-flex align-items-center gap-2">
                        <i class="bi bi-person-circle"></i>
                        <strong>{{ 'profile.section.info.title'|trans({}, 'profile') }}</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-hover">
                            <tbody>
                                <tr>
                                    <th class="text-muted" style="width: 40%;">{{ 'profile.field.fullname.label'|trans({}, 'profile') }}</th>
                                    <td><strong>{{ user.fullName }}</strong></td>
                                </tr>
                                <tr>
                                    <th class="text-muted">{{ 'profile.field.email.label'|trans({}, 'profile') }}</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">{{ 'profile.field.organization.label'|trans({}, 'profile') }}</th>
                                    <td>
                                        {% if user.division %}
                                            <strong>{{ user.division.nomDivision }}</strong>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-muted">{{ 'profile.field.id_cfi.label'|trans({}, 'profile') }}</th>
                                    <td><code class="text-info">{{ user.idCfi }}</code></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {# Colonne droite - PrÃ©fÃ©rences #}
            <div class="col-lg-6">
                <div class="card shadow-sm h-100 text-start">
                    <div class="card-header glass-primary text-primary d-flex align-items-center gap-2">
                        <i class="bi bi-sliders"></i>
                        <strong>{{ 'profile.section.preferences.title'|trans({}, 'profile') }}</strong>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                                <div class="card-body d-flex align-items-center gap-3 p-3">
                                    {% if user.theme == 'light' %}
                                        <i class="bi bi-sun-fill text-primary flex-shrink-0"></i>
                                    {% elseif user.theme == 'dark-blue' %}
                                        <i class="bi bi-moon-stars-fill text-primary flex-shrink-0"></i>
                                    {% elseif user.theme == 'dark-red' %}
                                        <i class="bi bi-moon-fill text-primary flex-shrink-0"></i>
                                    {% endif %}
                                    <h3 class="fw-semibold text-primary mb-0">
                                        {% if user.theme == 'light' %}
                                            {{ 'profile.preferences.theme.light'|trans({}, 'profile') }}
                                        {% elseif user.theme == 'dark-blue' %}
                                            {{ 'profile.preferences.theme.dark_blue'|trans({}, 'profile') }}
                                        {% elseif user.theme == 'dark-red' %}
                                            {{ 'profile.preferences.theme.dark_red'|trans({}, 'profile') }}
                                        {% endif %}
                                    </h3>
                                </div>
                            </div>

                            <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                                <div class="card-body d-flex align-items-center gap-3 p-3">
                                    {% if user.locale == 'fr' %}
                                        <span class="flex-shrink-0">ðŸ‡«ðŸ‡·</span>
                                    {% else %}
                                        <span class="flex-shrink-0">ðŸ‡¬ðŸ‡§</span>
                                    {% endif %}
                                    <h3 class="fw-semibold text-primary mb-0">
                                        {% if user.locale == 'fr' %}
                                            {{ 'profile.preferences.locale.french'|trans({}, 'profile') }}
                                        {% else %}
                                            {{ 'profile.preferences.locale.english'|trans({}, 'profile') }}
                                        {% endif %}
                                    </h3>
                                </div>
                            </div>

                            <a href="{{ path('settings_index') }}" class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                                <div class="card-body d-flex align-items-center gap-3 p-3">
                                    <i class="bi bi-gear text-primary flex-shrink-0"></i>
                                    <h3 class="fw-semibold text-primary mb-0">{{ 'profile.button.edit_settings'|trans({}, 'profile') }}</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Section Statistiques d'utilisation - Pleine largeur #}
        <div class="card shadow-sm mb-4 text-start">
            <div class="card-header glass-primary text-primary d-flex align-items-center gap-2">
                <i class="bi bi-graph-up"></i>
                <strong>{{ 'profile.section.stats.title'|trans({}, 'profile') }}</strong>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                        <div class="card-body p-3 text-center">
                            <small class="d-block mb-2 opacity-75" style="font-size: 0.65rem;">{{ 'profile.stats.member_since.label'|trans({}, 'profile') }}</small>
                            <h3 class="fw-semibold text-primary mb-0" style="font-size: 0.9rem;">{{ user.createdAt|date('d/m/Y') }}</h3>
                            <small class="d-block opacity-75" style="font-size: 0.6rem;">{{ 'profile.stats.member_since.days'|trans({'%days%': ((("now"|date('U')) - user.createdAt.timestamp) / 86400)|round(0, 'floor')}, 'profile') }}</small>
                        </div>
                    </div>

                    <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                        <div class="card-body p-3 text-center">
                            <small class="d-block mb-2 opacity-75" style="font-size: 0.65rem;">{{ 'profile.stats.last_login.label'|trans({}, 'profile') }}</small>
                            {% if user.lastLoginAt %}
                                <h3 class="fw-semibold text-primary mb-0" style="font-size: 0.9rem;">{{ user.lastLoginAt|date('d/m/Y') }}</h3>
                                <small class="d-block opacity-75" style="font-size: 0.6rem;">{{ user.lastLoginAt|date('H:i') }}</small>
                            {% else %}
                                <h3 class="fw-semibold text-primary mb-0" style="font-size: 0.9rem;">-</h3>
                            {% endif %}
                        </div>
                    </div>

                    <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                        <div class="card-body p-3 text-center">
                            <small class="d-block mb-2 opacity-75" style="font-size: 0.65rem;">{{ 'profile.stats.login_count.label'|trans({}, 'profile') }}</small>
                            <h3 class="fw-semibold text-primary mb-0" style="font-size: 0.9rem;">{{ user.loginCount }}</h3>
                            <small class="d-block opacity-75" style="font-size: 0.6rem;">{{ 'profile.stats.login_count.connections'|trans({}, 'profile') }}</small>
                        </div>
                    </div>

                    <div class="card text-decoration-none shadow-sm quick-access-card quick-access-card-compact">
                        <div class="card-body p-3 text-center">
                            <small class="d-block mb-2 opacity-75" style="font-size: 0.65rem;">{{ 'profile.stats.updated_at.label'|trans({}, 'profile') }}</small>
                            <h3 class="fw-semibold text-primary mb-0" style="font-size: 0.9rem;">{{ user.updatedAt|date('d/m/Y') }}</h3>
                            <small class="d-block opacity-75" style="font-size: 0.6rem;">{{ user.updatedAt|date('H:i') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Section Permissions - Pleine largeur #}
        {% if user.permissions %}
        <div class="card shadow-sm mb-4 text-start">
            <div class="card-header glass-primary text-primary d-flex align-items-center gap-2">
                <i class="bi bi-shield-lock"></i>
                <strong>{{ 'profile.section.permissions.title'|trans({}, 'profile') }}</strong>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    {# Permissions SystÃ¨me #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-gear"></i> {{ 'profile.permissions.system.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.connexion ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.connexion ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.connexion'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.pwa ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.pwa ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.pwa'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.administrateur ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.administrateur ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.administrateur'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.logistique ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.logistique ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.logistique'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.production ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.production ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.production'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.developpement ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.developpement ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.system.developpement'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions Utilisateurs #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-people"></i> {{ 'profile.permissions.users.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.utilisateurs_Crea ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.utilisateurs_Crea ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.users.create'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.utilisateurs_Modif ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.utilisateurs_Modif ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.users.modify'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.utilisateurs_Supp ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.utilisateurs_Supp ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.users.delete'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.utilisateurs_EmpruntIdentite ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.utilisateurs_EmpruntIdentite ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.users.impersonate'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions Divisions #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-building"></i> {{ 'profile.permissions.divisions.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.divisions_Crea ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.divisions_Crea ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.divisions.create'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.divisions_Modif ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.divisions_Modif ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.divisions.modify'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.divisions_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.divisions_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.divisions.view'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions Stocks #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-box-seam"></i> {{ 'profile.permissions.stocks.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.stocks_Crea ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.stocks_Crea ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.stocks.create'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.stocks_Modif ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.stocks_Modif ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.stocks.modify'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.stocks_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.stocks_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.stocks.view'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.stocks_Supp ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.stocks_Supp ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.stocks.delete'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions OpÃ©rations #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-activity"></i> {{ 'profile.permissions.operations.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.operations_Crea ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.operations_Crea ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.operations.create'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.operations_Valid ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.operations_Valid ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.operations.validate'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.operations_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.operations_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.operations.view'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions Campagnes #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-megaphone"></i> {{ 'profile.permissions.campaigns.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.campagnes_Commande ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.campagnes_Commande ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.campaigns.order'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.campagnes_Edit ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.campagnes_Edit ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.campaigns.edit'|trans({}, 'profile') }}
                            </li>
                        </ul>
                    </div>

                    {# Permissions Factures & Autres #}
                    <div class="col-md-6 col-lg-4">
                        <h6 class="text-muted mb-2"><i class="bi bi-grid-3x3-gap"></i> {{ 'profile.permissions.other.title'|trans({}, 'profile') }}</h6>
                        <ul class="list-unstyled small">
                            <li class="{{ user.permissions.factures_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.factures_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.invoices_view'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.reprises_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.reprises_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.returns_view'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.npaI_Crea ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.npaI_Crea ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.npai_create'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.npaI_Visu ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.npaI_Visu ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.npai_view'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.signataire ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.signataire ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.signatory'|trans({}, 'profile') }}
                            </li>
                            <li class="{{ user.permissions.valideur ? 'text-success' : 'text-muted' }}">
                                <i class="bi {{ user.permissions.valideur ? 'bi-check-circle-fill' : 'bi-x-circle' }}"></i>
                                {{ 'profile.permissions.other.validator'|trans({}, 'profile') }}
