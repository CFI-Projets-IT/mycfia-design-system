{% extends 'layouts/auth.html.twig' %}

{% block title %}Connexion - myCFiia{% endblock %}

{% block auth_content %}
    <div class="position-relative w-100 p-4" style="z-index: 1;">
        <div class="d-flex justify-content-center mb-4">
            <img src="{{ asset('images/logo.svg') }}" alt="myCFiia Logo" style="width: 80%; height: auto;">
        </div>

        <h4 class="text-white text-center mb-4" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-normal);">Connectez-vous</h4>

        {% if error %}
            {# Détection du type d'erreur pour affichage contextuel #}
            {% set errorMessage = error.messageKey|trans(error.messageData, 'security') %}
            {% set isTokenExpired = 'expire' in errorMessage|lower or '401' in errorMessage %}
            {% set isAccessDenied = 'refusé' in errorMessage|lower or 'refus' in errorMessage|lower or '403' in errorMessage %}
            {% set isInvalidToken = 'invalide' in errorMessage|lower or 'autoris' in errorMessage|lower or '400' in errorMessage %}

            <div class="alert alert-danger mb-4" role="alert">
                <div class="d-flex align-items-start gap-3">
                    <div class="flex-shrink-0 fs-3">
                        {% if isTokenExpired %}
                            <i class="bi bi-clock-history"></i>
                        {% elseif isAccessDenied %}
                            <i class="bi bi-shield-x"></i>
                        {% else %}
                            <i class="bi bi-exclamation-triangle"></i>
                        {% endif %}
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-2">
                            {% if isTokenExpired %}
                                Votre session a expiré
                            {% elseif isAccessDenied %}
                                Accès refusé
                            {% elseif isInvalidToken %}
                                Token invalide
                            {% else %}
                                Erreur de connexion
                            {% endif %}
                        </h6>
                        <p class="mb-2">{{ errorMessage }}</p>

                        {# Aide contextuelle selon le type d'erreur #}
                        <div class="mt-3 pt-3 border-top border-danger border-opacity-25">
                            <strong class="d-block mb-2"><i class="bi bi-lightbulb"></i> Que faire ?</strong>
                            <ul class="mb-2 ps-3" style="font-size: 0.9rem;">
                                {% if isTokenExpired %}
                                    <li>Votre token CFI est valable 30 minutes</li>
                                    <li>Générez un nouveau token sur CFI</li>
                                    <li>Reconnectez-vous avec le nouveau token</li>
                                {% elseif isAccessDenied %}
                                    <li>Vérifiez vos droits d'accès dans CFI</li>
                                    <li>Contactez votre administrateur si le problème persiste</li>
                                {% elseif isInvalidToken %}
                                    <li>Vérifiez que vous avez copié le token complet</li>
                                    <li>Le format doit être : xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</li>
                                    <li>Générez un nouveau token sur CFI si nécessaire</li>
                                {% else %}
                                    <li>Vérifiez votre token Gorillias</li>
                                    <li>Réessayez dans quelques instants</li>
                                {% endif %}
                            </ul>
                            <div class="d-flex gap-2 mt-3">
                                <a href="https://test.cfitech.io/" target="_blank" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-box-arrow-up-right"></i> Ouvrir CFI
                                </a>
                                <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-arrow-clockwise"></i> Réessayer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <form method="post" class="d-flex flex-column" id="loginForm">
            <div class="col-11 mx-auto">
                {# Toggle : Sélection du mode d'authentification #}
                <div class="btn-group w-100 mb-4" role="group" aria-label="Mode d'authentification">
                    <input type="radio" class="btn-check" name="mode" id="mode-token" value="token" checked autocomplete="off">
                    <label class="btn btn-outline-light" for="mode-token">
                        <i class="bi bi-key-fill me-2"></i>Token Gorillias
                    </label>

                    <input type="radio" class="btn-check" name="mode" id="mode-credentials" value="credentials" autocomplete="off">
                    <label class="btn btn-outline-light" for="mode-credentials">
                        <i class="bi bi-person-lock me-2"></i>Email + Mot de passe
                    </label>
                </div>

                {# Champs mode Token (affichés par défaut) #}
                <div id="token-fields" class="auth-mode-fields">
                    <div class="input-group mb-4">
                        <span class="input-group-text">
                            <i class="bi bi-key-fill"></i>
                        </span>
                        <input
                            type="text"
                            id="jetonUtilisateur"
                            name="jetonUtilisateur"
                            class="form-control"
                            value="{{ last_username }}"
                            placeholder="ae5ac49e-3cd6-4d41-899a-782b6fb6797c"
                            pattern="[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                            title="Format UUID requis (ex: ae5ac49e-3cd6-4d41-899a-782b6fb6797c)"
                            autofocus
                        >
                    </div>

                    <div class="alert alert-info mb-4 d-flex align-items-start gap-2" style="font-size: var(--font-size-sm);">
                        <div class="flex-grow-1">
                            <i class="bi bi-info-circle"></i>
                            <strong>Obtenir votre token :</strong><br>
                            Connectez-vous sur CFI → Menu Gorillias → Copiez le token
                        </div>
                        <a href="https://test.cfitech.io/" target="_blank" class="btn btn-sm btn-outline-info" title="Ouvrir CFI pour générer un token">
                            <i class="bi bi-box-arrow-up-right"></i> CFI
                        </a>
                    </div>
                </div>

                {# Champs mode Credentials (masqués par défaut) #}
                <div id="credentials-fields" class="auth-mode-fields d-none">
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill"></i>
                        </span>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="votre.email@exemple.com"
                            autocomplete="email"
                        >
                    </div>

                    <div class="input-group mb-4">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill"></i>
                        </span>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Mot de passe CFI"
                            autocomplete="current-password"
                        >
                    </div>

                    <div class="alert alert-info mb-4" style="font-size: var(--font-size-sm);">
                        <i class="bi bi-info-circle"></i>
                        <strong>Authentification CFI :</strong><br>
                        Utilisez votre email et mot de passe CFI habituels.
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100 px-4">
                            Connexion
                        </button>
                    </div>
                    {# TODO Sprint S0+ : Réactiver lien mot de passe oublié
                    <div class="col-12 text-center pt-4">
                        <a href="#" class="startlink">mot de passe ou identifiant oublié ?</a>
                    </div>
                    #}
                </div>
            </div>
        </form>

        <div class="text-center text-white mt-5" style="font-size: var(--font-size-sm);">
            <p class="mb-3">Vous n'avez pas de compte, prenez contact avec nous.</p>
            <div class="custom-btns d-flex justify-content-center gap-2 mt-3">
                <a href="https://www.cfi-technologies.fr" target="_blank" class="btn" title="Site Web">
                    <i class="bi bi-globe"></i>
                </a>
                <a href="https://www.linkedin.com/company/cfitechnologies" target="_blank" class="btn" title="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="mailto:projets@cfitech.io" class="btn" title="Email">
                    <i class="bi bi-at"></i>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('login.js') }}"></script>
{% endblock %}
