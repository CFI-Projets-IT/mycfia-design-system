{% extends 'layouts/auth.html.twig' %}

{% block title %}Connexion - myCFiia{% endblock %}

{% block auth_content %}
    <div class="auth-card">
        <div class="auth-logo">
            <img src="{{ asset('images/logo.svg') }}" alt="myCFiia Logo">
        </div>

        <h4 class="auth-title">Connectez-vous</h4>

        {% if error %}
            <div class="alert alert-danger mb-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" class="auth-form">
            <div class="auth-form-group">
                <i class="bi bi-person"></i>
                <input
                    type="text"
                    id="username"
                    name="_username"
                    class="auth-form-input"
                    value="{{ last_username }}"
                    required
                    autofocus
                    placeholder="Identifiant"
                >
            </div>

            <div class="auth-form-group">
                <i class="bi bi-lock"></i>
                <input
                    type="password"
                    id="password"
                    name="_password"
                    class="auth-form-input"
                    required
                    placeholder="Mot de passe"
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="auth-actions">
                <button type="submit" class="btn btn-primary btn-block">
                    Connexion
                </button>
                <a href="#" class="auth-forgot-link">mot de passe ou identifiant oublié ?</a>
            </div>
        </form>

        <div class="auth-footer">
            <p>Vous n'avez pas de compte, prenez contact avec nous.</p>
            <div class="auth-social-icons">
                <a href="mailto:contact@mycfiia.com" title="Email">
                    <i class="bi bi-envelope"></i>
                </a>
                <a href="https://linkedin.com" target="_blank" title="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="tel:+33000000000" title="Téléphone">
                    <i class="bi bi-telephone"></i>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
