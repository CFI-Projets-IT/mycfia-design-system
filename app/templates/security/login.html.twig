{% extends 'layouts/auth.html.twig' %}

{% block title %}Connexion - myCFiia{% endblock %}

{% block auth_content %}
    <div class="position-relative w-100 p-4" style="z-index: 1;">
        <div class="d-flex justify-content-center mb-4">
            <img src="{{ asset('images/logo.svg') }}" alt="myCFiia Logo" style="width: 80%; height: auto;">
        </div>

        <h4 class="text-white text-center mb-4" style="font-size: var(--font-size-lg); font-weight: var(--font-weight-normal);">Connectez-vous</h4>

        {% if error %}
            <div class="alert alert-danger mb-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" class="d-flex flex-column">
            <div class="col-11 mx-auto">
                {# TODO Sprint S0+ : Réactiver authentification email/password quand CFI fournira l'endpoint
                <div class="input-group mb-4">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input
                        type="text"
                        id="username"
                        name="_username"
                        class="form-control"
                        value="{{ last_username }}"
                        required
                        autofocus
                        placeholder="Identifiant"
                    >
                </div>

                <div class="input-group mb-4">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input
                        type="password"
                        id="password"
                        name="_password"
                        class="form-control"
                        required
                        placeholder="Mot de passe"
                    >
                </div>
                #}

                {# Sprint S0 : Authentification via Token Gorillias #}
                <div class="input-group mb-4">
                    <span class="input-group-text">
                        <i class="bi bi-key-fill"></i>
                    </span>
                    <input
                        type="text"
                        id="jetonUtilisateur"
                        name="jetonUtilisateur"
                        class="form-control"
                        value="{{ last_username }}"
                        required
                        autofocus
                        placeholder="ae5ac49e-3cd6-4d41-899a-782b6fb6797c"
                        pattern="[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                        title="Format UUID requis (ex: ae5ac49e-3cd6-4d41-899a-782b6fb6797c)"
                    >
                </div>

                <div class="alert alert-info mb-4 d-flex align-items-start gap-2" style="font-size: var(--font-size-sm);">
                    <div class="flex-grow-1">
                        <i class="bi bi-info-circle"></i>
                        <strong>Obtenir votre token :</strong><br>
                        Connectez-vous sur CFI → Menu Gorillias → Copiez le token
                    </div>
                    <a href="https://test.cfitech.io/" target="_blank" class="btn btn-sm btn-outline-info" title="Ouvrir CFI pour générer un token">
                        <i class="bi bi-box-arrow-up-right"></i> CFI
                    </a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100 px-4">
                            Connexion
                        </button>
                    </div>
                    {# TODO Sprint S0+ : Réactiver lien mot de passe oublié
                    <div class="col-12 text-center pt-4">
                        <a href="#" class="startlink">mot de passe ou identifiant oublié ?</a>
                    </div>
                    #}
                </div>
            </div>
        </form>

        <div class="text-center text-white mt-5" style="font-size: var(--font-size-sm);">
            <p class="mb-3">Vous n'avez pas de compte, prenez contact avec nous.</p>
            <div class="custom-btns d-flex justify-content-center gap-2 mt-3">
                <a href="https://www.cfi-technologies.fr" target="_blank" class="btn" title="Site Web">
                    <i class="bi bi-globe"></i>
                </a>
                <a href="https://www.linkedin.com/company/cfitechnologies" target="_blank" class="btn" title="LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="mailto:projets@cfitech.io" class="btn" title="Email">
                    <i class="bi bi-at"></i>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
