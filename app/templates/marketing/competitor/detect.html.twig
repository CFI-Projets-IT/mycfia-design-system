{% extends 'layouts/home.html.twig' %}

{% block title %}Recherche de concurrents - {{ project.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/components/data-table.css') }}">
    <style>
        .cursor-pointer {
            cursor: pointer;
        }
        .cursor-pointer:hover {
            background-color: rgba(0, 0, 0, 0.03);
        }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid" style="max-width: 1200px;"
     data-validate-manual-url="{{ path('marketing_competitor_validate_manual', {id: project.id}) }}">
    {# Breadcrumb #}
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_index') }}">Projets Marketing</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_show', {id: project.id}) }}">{{ project.name }}</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_persona_show', {id: project.id}) }}">Personas</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Concurrents</li>
            </ol>
        </nav>
    </div>

    {# Header #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-9">
                    <h2 class="mb-2">
                        <i class="bi bi-building text-primary"></i>
                        Recherche de concurrents
                    </h2>
                    <p class="text-muted mb-0">
                        L'IA détecte automatiquement vos concurrents principaux en analysant votre secteur et votre contexte
                    </p>
                </div>
                <div class="col-md-3 text-end">
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-search"></i> Détection IA
                    </span>
                </div>
            </div>
        </div>
    </div>

    {% if competitors is empty %}
        {# Première détection : Bouton de lancement #}
        <div class="card shadow-sm">
            <div class="card-body p-5 text-center">
                <i class="bi bi-robot text-primary mb-3" style="font-size: 4rem;"></i>
                <h3 class="mb-3">Prêt à détecter vos concurrents</h3>
                <p class="text-muted mb-4">
                    Notre agent IA <strong>CompetitorAnalystAgent</strong> va :<br>
                    <span class="badge bg-light text-dark me-2">1️⃣ Analyser vos mots-clés Google Ads</span>
                    <span class="badge bg-light text-dark me-2">2️⃣ Rechercher via SERP API</span>
                    <span class="badge bg-light text-dark me-2">3️⃣ Scraper les sites concurrents (Firecrawl)</span>
                    <span class="badge bg-light text-dark">4️⃣ Valider avec Mistral Large</span>
                </p>

                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle"></i>
                    <strong>Temps estimé :</strong> 3 à 5 minutes<br>
                    <small class="text-muted">La tâche s'exécute en arrière-plan avec barre de progression temps réel.</small>
                </div>

                <form action="{{ path('marketing_competitor_start', {id: project.id}) }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('competitor_start_' ~ project.id) }}">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-play-fill"></i> Lancer la détection
                    </button>
                </form>

                <div class="mt-4">
                    <a href="{{ path('marketing_persona_show', {id: project.id}) }}" class="btn btn-link">
                        <i class="bi bi-arrow-left"></i> Retour aux personas
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        {# Concurrents détectés : Afficher le tableau de sélection #}
        <div class="alert alert-success mb-4">
            <div class="d-flex align-items-start">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div class="flex-grow-1">
                    <h6 class="alert-heading mb-2">Détection automatique réussie</h6>
                    <p class="mb-2">
                        <strong>{{ competitorsCount }}</strong> concurrent(s) détecté(s) pour le secteur <strong>{{ project.sector }}</strong>
                    </p>
                    <small class="text-muted">
                        <i class="bi bi-lightbulb"></i>
                        Sélectionnez les concurrents pertinents puis validez pour continuer
                    </small>
                </div>
            </div>
        </div>

        {# Formulaire de validation #}
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-check2-square text-success"></i>
                        Concurrents détectés
                    </h5>
                    <div>
                        <span class="badge bg-info me-2">
                            <span id="selected-count">{{ competitors|length }}</span> sélectionné(s)
                        </span>
                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="if(confirm('Voulez-vous relancer une nouvelle détection ?')) { document.getElementById('relaunch-form').submit(); }">
                            <i class="bi bi-arrow-clockwise"></i> Relancer la détection
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <form method="post" action="{{ path('marketing_competitor_validate', {id: project.id}) }}" id="competitor-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('validate_competitors_' ~ project.id) }}">
                    <div id="competitor-ids-container"></div>

                    {# Tableau avec design data-table #}
                    <div class="chat-datatable">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 50px;" class="text-center">
                                        <input type="checkbox" class="form-check-input" id="select-all-checkbox" title="Tout sélectionner" checked>
                                    </th>
                                    <th style="width: 200px;">Titre</th>
                                    <th style="width: 180px;">Domaine</th>
                                    <th style="width: 80px;" class="text-center">Score</th>
                                    <th>Résumé</th>
                                </tr>
                            </thead>
                            <tbody id="competitors-table-body">
                                {% for competitor in competitors %}
                                <tr class="competitor-row cursor-pointer" data-competitor-index="{{ loop.index0 }}">
                                    <td class="text-center">
                                        <input type="checkbox" class="form-check-input competitor-checkbox"
                                               data-id="{{ competitor.id }}"
                                               data-domain="{{ competitor.domain }}"
                                               data-title="{{ competitor.title }}"
                                               data-alignment-score="{{ competitor.alignmentScore }}"
                                               data-reasoning="{{ competitor.reasoning }}"
                                               {% if competitor.selected %}checked{% endif %}>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">{{ competitor.title|default('N/A')|slice(0, 50) }}{% if competitor.title|length > 50 %}...{% endif %}</div>
                                    </td>
                                    <td>
                                        <a href="{{ competitor.url }}" target="_blank" class="text-decoration-none">
                                            {{ competitor.domain }}
                                            <i class="bi bi-box-arrow-up-right ms-1 text-muted small"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge {% if competitor.alignmentScore >= 80 %}bg-success{% elseif competitor.alignmentScore >= 60 %}bg-primary{% else %}bg-warning{% endif %}">
                                            {{ competitor.alignmentScore }}%
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">{{ competitor.reasoning|slice(0, 100) }}{% if competitor.reasoning|length > 100 %}...{% endif %}</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Boutons d'action #}
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('marketing_persona_show', {id: project.id}) }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="validate-btn">
                                <i class="bi bi-check-circle"></i> Valider et continuer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}

    {# Formulaire de relance (caché) #}
    <form id="relaunch-form" action="{{ path('marketing_competitor_start', {id: project.id}) }}" method="post" class="d-none">
        <input type="hidden" name="_token" value="{{ csrf_token('competitor_start_' ~ project.id) }}">
    </form>
</div>

{% block javascripts %}
    {{ parent() }}
    <script>
        // Gestion de la sélection des concurrents
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('competitor-form');
            if (!form) return;

            const checkboxes = document.querySelectorAll('.competitor-checkbox');
            const selectAllCheckbox = document.getElementById('select-all-checkbox');
            const selectedCountSpan = document.getElementById('selected-count');
            const competitorsInput = document.getElementById('competitors-input');
            const competitorsDataInput = document.getElementById('competitors-data-input');

            // Fonction de mise à jour du compteur et des inputs
            function updateSelection() {
                const selectedIds = [];
                const container = document.getElementById('competitor-ids-container');

                // Vider le container
                container.innerHTML = '';

                checkboxes.forEach(function(checkbox) {
                    if (checkbox.checked) {
                        selectedIds.push(checkbox.dataset.id);

                        // Créer un input hidden pour chaque ID sélectionné
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'competitor_ids[]';
                        input.value = checkbox.dataset.id;
                        container.appendChild(input);
                    }
                });

                selectedCountSpan.textContent = selectedIds.length;

                // Mettre à jour l'état du select-all
                selectAllCheckbox.checked = selectedIds.length === checkboxes.length;
                selectAllCheckbox.indeterminate = selectedIds.length > 0 && selectedIds.length < checkboxes.length;
            }

            // Select all / Deselect all
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    checkboxes.forEach(function(checkbox) {
                        checkbox.checked = selectAllCheckbox.checked;
                    });
                    updateSelection();
                });
            }

            // Individual checkbox
            checkboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', updateSelection);
            });

            // Initialiser la sélection au chargement
            updateSelection();
        });
    </script>
{% endblock %}
{% endblock %}
