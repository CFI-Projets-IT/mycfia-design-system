{# Modals pour afficher le contenu des assets formatés via AssetPresenters #}
{% if formatted_assets is defined and formatted_assets|length > 0 %}
    {% for item in formatted_assets %}
        {% set asset = item.entity %}
        {% set formatted = item.formatted %}

        <div class="modal fade" id="assetModal{{ asset.id }}" tabindex="-1" aria-labelledby="assetModalLabel{{ asset.id }}" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assetModalLabel{{ asset.id }}">
                            <i class="bi bi-{{ formatted.icon }}"></i> {{ formatted.label }}
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        {# Affichage du contenu principal #}
                        {% if formatted.main_content is not empty %}
                            {% for key, value in formatted.main_content %}
                                <div class="mb-4">
                                    <h6 class="text-primary mb-2">
                                        <i class="bi bi-file-earmark-text"></i>
                                        {{ key|replace({'_': ' '})|title }}
                                    </h6>

                                    {# Affichage selon le type de valeur #}
                                    {% if value is iterable and value is not same as(null) %}
                                        {# Array : afficher comme liste #}
                                        {% if key == 'hashtags' %}
                                            <div class="d-flex flex-wrap gap-1">
                                                {% for tag in value %}
                                                    <span class="badge bg-info">{{ tag starts with '#' ? tag : '#' ~ tag }}</span>
                                                {% endfor %}
                                            </div>
                                        {% elseif key == 'headlines' or key == 'titles' %}
                                            <div class="d-flex flex-wrap gap-2">
                                                {% for item in value %}
                                                    <span class="badge bg-primary fs-6 fw-normal">{{ item }}</span>
                                                {% endfor %}
                                            </div>
                                        {% elseif key == 'keywords' %}
                                            <div class="d-flex flex-wrap gap-1">
                                                {% for kw in value %}
                                                    <span class="badge bg-secondary">{{ kw }}</span>
                                                {% endfor %}
                                            </div>
                                        {% elseif key == 'personalization_fields' %}
                                            {# SMS : Champs de personnalisation #}
                                            <div class="d-flex flex-wrap gap-1">
                                                {% for field in value %}
                                                    <span class="badge bg-primary">{{ field }}</span>
                                                {% endfor %}
                                            </div>
                                        {% elseif key == 'optimization_suggestions' %}
                                            {# SMS : Suggestions d'optimisation #}
                                            <ul class="list-unstyled mb-0">
                                                {% for suggestion in value %}
                                                    <li class="mb-1">
                                                        <i class="bi bi-lightbulb text-warning"></i> {{ suggestion }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% elseif key == 'sections' %}
                                            {% for section in value %}
                                                <div class="card mb-2">
                                                    <div class="card-header bg-light py-2">
                                                        <strong>{{ section.heading ?? section.title ?? 'Section' }}</strong>
                                                    </div>
                                                    <div class="card-body">
                                                        {{ (section.content ?? section.body ?? '')|nl2br }}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        {% elseif key == 'faq' %}
                                            {# Article : FAQ (questions fréquentes) #}
                                            <div class="accordion" id="faq-accordion-{{ loop.index }}">
                                                {% for faqItem in value %}
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header" id="faq-heading-{{ loop.parent.loop.index }}-{{ loop.index }}">
                                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-collapse-{{ loop.parent.loop.index }}-{{ loop.index }}">
                                                                <i class="bi bi-question-circle me-2"></i> {{ faqItem.question ?? 'Question' }}
                                                            </button>
                                                        </h2>
                                                        <div id="faq-collapse-{{ loop.parent.loop.index }}-{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#faq-accordion-{{ loop.parent.loop.index }}">
                                                            <div class="accordion-body">
                                                                {{ faqItem.answer ?? '' }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% else %}
                                            {# Array générique #}
                                            {% for item in value %}
                                                {% if item is iterable %}
                                                    {# Si item est un objet/array, afficher ses propriétés #}
                                                    <div class="bg-light p-2 rounded mb-2">
                                                        {% for k, v in item %}
                                                            <strong>{{ k|replace({'_': ' '})|title }}:</strong> {{ v }}<br>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    {# Si item est une string, afficher directement #}
                                                    <div class="bg-light p-2 rounded mb-2">{{ item }}</div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    {% else %}
                                        {# String : affichage simple #}
                                        {% if key == 'call_to_action' %}
                                            <button class="btn btn-primary" disabled>{{ value }}</button>
                                        {% elseif key == 'subject' %}
                                            <div class="bg-primary bg-opacity-10 p-3 rounded fw-semibold">{{ value }}</div>
                                        {% elseif key == 'hook' %}
                                            <div class="bg-warning bg-opacity-10 p-3 rounded border-start border-warning border-3">{{ value }}</div>
                                        {% elseif key == 'meta_description' %}
                                            <div class="bg-light p-3 rounded border-start border-success border-3">{{ value }}</div>
                                        {% elseif key == 'encoding' %}
                                            {# SMS : Encodage (GSM ou Unicode) #}
                                            <span class="badge bg-{{ value == 'gsm' ? 'success' : 'warning' }} fs-6">
                                                <i class="bi bi-cpu"></i> {{ value|upper }}
                                            </span>
                                        {% elseif key == 'segment_count' %}
                                            {# SMS : Nombre de segments #}
                                            <span class="badge bg-info fs-6">
                                                <i class="bi bi-layers"></i> {{ value }} segment{{ value > 1 ? 's' : '' }}
                                            </span>
                                        {% elseif key == 'cnil_compliant' %}
                                            {# SMS : Conformité CNIL #}
                                            <span class="badge bg-{{ value ? 'success' : 'warning' }} fs-6">
                                                <i class="bi bi-{{ value ? 'shield-check' : 'exclamation-triangle' }}"></i>
                                                {{ value ? 'Conforme CNIL' : 'Non conforme CNIL' }}
                                            </span>
                                        {% elseif key == 'send_window' %}
                                            {# SMS : Horaires légaux #}
                                            <span class="badge bg-secondary fs-6">
                                                <i class="bi bi-clock"></i> {{ value }}
                                            </span>
                                        {% elseif key == 'urgency_trigger' %}
                                            {# SMS : Déclencheur d'urgence #}
                                            <span class="badge bg-danger fs-6">
                                                <i class="bi bi-alarm"></i> {{ value }}
                                            </span>
                                        {% elseif key == 'footer' %}
                                            {# SMS : Mention légale STOP #}
                                            <span class="badge bg-dark fs-6">
                                                <i class="bi bi-stop-circle"></i> {{ value }}
                                            </span>
                                        {% elseif key == 'character_count' or key == 'character_budget' %}
                                            {# SMS : Géré via barre de progression (ne pas afficher ici) #}
                                        {% else %}
                                            <div class="bg-light p-3 rounded">{{ value|nl2br }}</div>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% endif %}

                        {# Affichage de l'image générée par IA (nouveau format filesystem) #}
                        {% if formatted.main_content.image_path is defined and formatted.main_content.image_path %}
                            <hr class="my-4">
                            <div class="mb-3">
                                <h6 class="text-primary mb-3">
                                    <i class="bi bi-image-fill"></i> Image générée par IA
                                </h6>
                                <div class="border rounded p-3 bg-light text-center">
                                    <img src="{{ formatted.main_content.image_path }}"
                                         alt="{{ formatted.main_content.image_description|default('Image marketing générée par IA') }}"
                                         class="img-fluid rounded shadow-sm asset-generated-image">
                                    {% if formatted.main_content.image_metadata is defined %}
                                        <div class="mt-3 d-flex justify-content-center gap-2 flex-wrap">
                                            {% if formatted.main_content.image_metadata.duration_ms is defined %}
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-clock"></i> {{ (formatted.main_content.image_metadata.duration_ms / 1000)|number_format(1) }}s
                                                </span>
                                            {% endif %}
                                            {% if formatted.main_content.image_metadata.size_bytes is defined %}
                                                <span class="badge bg-info">
                                                    <i class="bi bi-file-earmark"></i> {{ (formatted.main_content.image_metadata.size_bytes / 1024)|number_format(0) }} KB
                                                </span>
                                            {% endif %}
                                            {% if formatted.main_content.image_metadata.format is defined %}
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-palette"></i> {{ formatted.main_content.image_metadata.format|upper }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}

                        {# Barre progression caractères SMS #}
                        {% if formatted.main_content.character_count is defined and formatted.main_content.character_budget is defined %}
                            <div class="mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">
                                        <i class="bi bi-file-text"></i> Utilisation caractères
                                    </span>
                                    <span class="badge bg-secondary">
                                        {{ formatted.main_content.character_count }} / {{ formatted.main_content.character_budget }}
                                    </span>
                                </div>
                                {% set usagePercent = (formatted.main_content.character_count / formatted.main_content.character_budget * 100)|round %}
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-{{ usagePercent >= 90 ? 'danger' : (usagePercent >= 75 ? 'warning' : 'success') }}"
                                         role="progressbar"
                                         style="width: {{ usagePercent }}%"
                                         aria-valuenow="{{ usagePercent }}"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {# Affichage des variations #}
                        {% if formatted.variations is not empty %}
                            <hr class="my-4">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-layers"></i> Variations ({{ formatted.variations|length }})
                            </h6>

                            {% for variation in formatted.variations %}
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <strong>Variation {{ loop.index }}</strong>
                                    </div>
                                    <div class="card-body">
                                        {% for key, value in variation %}
                                            {% if value is iterable %}
                                                <p class="mb-2">
                                                    <strong>{{ key|replace({'_': ' '})|title }} :</strong>
                                                    {% if key == 'hashtags' or key == 'keywords' %}
                                                        {% for item in value %}
                                                            <span class="badge bg-secondary me-1">{{ item }}</span>
                                                        {% endfor %}
                                                    {% else %}
                                                        <br>{{ value|join(', ') }}
                                                    {% endif %}
                                                </p>
                                            {% else %}
                                                <p class="mb-2"><strong>{{ key|replace({'_': ' '})|title }} :</strong> {{ value }}</p>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}

                        {# Score de qualité #}
                        {% if asset.qualityScore %}
                            <hr class="my-4">
                            {% set scorePercent = (asset.qualityScore * 100)|round %}
                            <div class="mb-3">
                                <div class="text-muted small mb-2"><i class="bi bi-speedometer2"></i> Score de qualité</div>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="progress flex-grow-1" style="height: 10px;">
                                        <div class="progress-bar bg-{{ scorePercent >= 80 ? 'success' : (scorePercent >= 50 ? 'warning' : 'danger') }}"
                                             role="progressbar"
                                             style="width: {{ scorePercent }}%">
                                        </div>
                                    </div>
                                    <span class="fw-semibold">{{ scorePercent }}%</span>
                                </div>
                            </div>
                        {% endif %}

                        {# Notes #}
                        {% if asset.notes %}
                            <hr class="my-4">
                            <div class="mb-3">
                                <div class="text-muted small mb-2"><i class="bi bi-sticky"></i> Notes</div>
                                <div class="bg-light p-3 rounded">{{ asset.notes|nl2br }}</div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}

