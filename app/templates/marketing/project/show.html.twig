                        {% if persona.description %}
                            <div class="mb-4">
                                <div class="text-muted small mb-2"><i class="bi bi-card-text"></i> Description</div>
                                <div class="bg-light p-3 rounded">{{ persona.description|nl2br }}</div>
                            </div>
                        {% endif %}

