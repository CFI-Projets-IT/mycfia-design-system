{% extends 'layouts/home.html.twig' %}

{% block title %}Projets Marketing IA - myCFiia{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Projets Marketing IA</h1>
            <p class="text-muted mb-0">Gérez vos campagnes marketing automatisées avec l'IA</p>
        </div>
        <a href="{{ path('marketing_project_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau projet
        </a>
    </div>

    {% if projects is empty %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-megaphone text-muted mb-3" style="font-size: 4rem;"></i>
                <h3 class="h5 text-muted mb-3">Aucun projet marketing</h3>
                <p class="text-muted mb-4">Créez votre premier projet pour générer des campagnes marketing avec l'IA</p>
                <a href="{{ path('marketing_project_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Créer un projet
                </a>
            </div>
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-3">Nom du projet</th>
                                <th>Objectif</th>
                                <th>Description</th>
                                <th>Budget</th>
                                <th>Statut</th>
                                <th>Date création</th>
                                <th class="text-end pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td class="px-3">
                                        <div class="fw-semibold">{{ project.name }}</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            {% if project.goalType == constant('App\\Enum\\GoalType::AWARENESS') %}
                                                <i class="bi bi-megaphone"></i> Notoriété
                                            {% elseif project.goalType == constant('App\\Enum\\GoalType::CONVERSION') %}
                                                <i class="bi bi-graph-up-arrow"></i> Conversion
                                            {% else %}
                                                <i class="bi bi-heart"></i> Fidélisation
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="text-muted small" style="max-width: 300px;">
                                            {{ project.description|length > 80 ? project.description|slice(0, 80) ~ '...' : project.description }}
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-semibold">{{ project.budget|number_format(0, ',', ' ') }} €</span>
                                    </td>
                                    <td>
                                        <span class="badge {{ project.status.badgeClass }}">
                                            {{ ('project.status.' ~ project.status.value)|trans({}, 'marketing') }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted small">
                                            <i class="bi bi-calendar"></i>
                                            {{ project.createdAt|date('d/m/Y') }}
                                        </span>
                                    </td>
                                    <td class="text-end pe-3">
                                        <a href="{{ path('marketing_project_show', {id: project.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir le projet">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
