{% endblock %}

{% block modals %}
{# Modals Personas #}
{% for persona in selectedPersonas %}
<div class="modal fade" id="personaModal{{ persona.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-person-circle text-primary"></i>
                    Persona : {{ persona.name }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {# Informations principales #}
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-info-circle"></i> Informations
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Nom</label>
                            <p class="form-control-plaintext">{{ persona.name }}</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">√Çge</label>
                            <p class="form-control-plaintext">{{ persona.age }} ans</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Profession</label>
                            <p class="form-control-plaintext">{{ persona.job }}</p>
                        </div>
                    </div>
                </div>

                {# Description #}
                {% if persona.description %}
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-file-text"></i> Profil
                    </h6>
                    <p class="text-muted">{{ persona.description }}</p>
                </div>
                {% endif %}

                {# Objectifs #}
                {% if persona.rawData and persona.rawData.goals is defined %}
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-bullseye"></i> Objectifs
                    </h6>
                    {% if persona.rawData.goals is iterable %}
                        <ul class="list-unstyled mb-0">
                            {% for goal in persona.rawData.goals %}
                                <li class="text-muted mb-1">
                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                    {{ goal }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">{{ persona.rawData.goals }}</p>
                    {% endif %}
                </div>
                {% endif %}

                {# Points de douleur #}
                {% if persona.rawData and persona.rawData.pain_points is defined %}
                <div class="mb-0">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-exclamation-triangle"></i> Points de douleur
                    </h6>
                    {% if persona.rawData.pain_points is iterable %}
                        <ul class="list-unstyled mb-0">
                            {% for pain in persona.rawData.pain_points %}
                                <li class="text-muted mb-1">
                                    <i class="bi bi-x-circle-fill text-danger me-1"></i>
                                    {{ pain }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">{{ persona.rawData.pain_points }}</p>
                    {% endif %}
                </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{# Modals Concurrents #}
{% for competitor in selectedCompetitors %}
<div class="modal fade" id="competitorModal{{ competitor.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-building text-primary"></i>
                    Concurrent : {{ competitor.title }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {# Informations principales #}
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-info-circle"></i> Informations
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Domaine</label>
                            <p class="form-control-plaintext">{{ competitor.domain }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">URL</label>
                            <p class="form-control-plaintext">
                                <a href="{{ competitor.url|default('#') }}" target="_blank" rel="noopener">
                                    <i class="bi bi-box-arrow-up-right"></i> Ouvrir
                                </a>
                            </p>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Raisonnement IA</label>
                            <p class="form-control-plaintext text-muted">{{ competitor.reasoning|default('Aucune analyse') }}</p>
                        </div>
                    </div>
                </div>

                {# Validation IA #}
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-robot"></i> Validation IA
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Score d'alignement</label>
                            <p class="form-control-plaintext">
                                <span class="badge fs-6 {{ competitor.alignmentScore >= 70 ? 'bg-success' : (competitor.alignmentScore >= 50 ? 'bg-warning' : 'bg-secondary') }}">
                                    {{ competitor.alignmentScore }}%
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Overlap Offre</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary">{{ competitor.offeringOverlap|default('N/A') }}</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Overlap March√©</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-info">{{ competitor.marketOverlap|default('N/A') }}</span>
                            </p>
                        </div>
                    </div>
                </div>

                {# Signaux Marketing #}
                <div class="mb-0">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-graph-up"></i> Signaux Marketing
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Google Ads</label>
                            <p class="form-control-plaintext">
                                {% if competitor.hasAds %}
                                    <span class="badge bg-warning text-dark">üí∞ Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Non</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">S√©lectionn√©</label>
                            <p class="form-control-plaintext">
                                {% if competitor.selected %}
                                    <span class="badge bg-success">‚úì Oui</span>
                                {% else %}
                                    <span class="badge bg-secondary">Non</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .cursor-pointer {
            cursor: pointer;
        }
        .cursor-pointer:hover {
            opacity: 0.8;
            transform: translateY(-1px);
            transition: all 0.2s;
        }
    </style>
{% endblock %}
