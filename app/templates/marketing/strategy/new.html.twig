{% extends 'layouts/home.html.twig' %}

{% block title %}Générer stratégie marketing - {{ project.name }}{% endblock %}

{% block content_classes %} marketing-page{% endblock %}

{% block content %}
<div class="container" style="max-width: 900px;" data-project-id="{{ project.id }}" data-competitors-input="{{ form.competitors.vars.id }}">
    {# Breadcrumb #}
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_index') }}">Projets Marketing</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_show', {id: project.id}) }}">{{ project.name }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Générer stratégie</li>
            </ol>
        </nav>
    </div>

    {# En-tête #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="mb-2">
                <i class="bi bi-graph-up-arrow text-primary"></i>
                Générer votre stratégie marketing IA
            </h2>
            <p class="text-muted mb-0">
                Sélectionnez les personas ciblés pour générer une stratégie marketing personnalisée
            </p>
        </div>
    </div>

    {# Formulaire de génération #}
    <div class="card shadow-sm">
        <div class="card-body p-4">
            {{ form_start(form) }}

            {# Sélection des personas #}
            <div class="mb-4">
                <h5 class="fw-bold text-primary mb-3 pb-2 border-bottom">
                    <i class="bi bi-people-fill"></i>
                    Personas ciblés
                </h5>
                <p class="text-muted small mb-3">
                    <i class="bi bi-info-circle"></i>
                    Sélectionnez un ou plusieurs personas pour cette stratégie marketing. Vous devez choisir au moins un persona.
                </p>

                {# Grille de cartes pour les checkboxes personas #}
                <div class="row g-3">
                    {% for child in form.personas %}
                        {# Parser le label pour extraire les infos (format: "Nom - Age ans, Métier") #}
                        {% set labelParts = child.vars.label|split(' - ') %}
                        {% set personaName = labelParts[0] %}
                        {% set ageAndJob = labelParts[1]|default('')|split(', ') %}
                        {% set personaAge = ageAndJob[0]|default('')|replace({' ans': ''}) %}
                        {% set personaJob = ageAndJob[1]|default('') %}

                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border persona-card">
                                <label class="card-body p-3 cursor-pointer" for="{{ child.vars.id }}">
                                    <div class="d-flex align-items-start justify-content-between mb-2">
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-person-circle text-primary fs-4"></i>
                                            <strong class="fw-semibold">{{ personaName }}</strong>
                                        </div>
                                        {{ form_widget(child, {
                                            attr: {class: 'form-check-input persona-checkbox'}
                                        }) }}
                                    </div>
                                    <div class="small text-muted">
                                        <div>
                                            <i class="bi bi-calendar3"></i> {{ personaAge }} ans
                                            • <i class="bi bi-briefcase"></i> {{ personaJob }}
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <hr class="my-4">

            {# Concurrents déjà validés #}
            {% if project.competitorAnalysis %}
                {% set competitors = project.competitorAnalysis.competitorsNames %}
                <div class="mb-4">
                    <h5 class="fw-bold text-primary mb-3">
                        <i class="bi bi-building"></i>
                        Concurrents identifiés
                    </h5>
                    <div class="alert alert-success">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="alert-heading mb-2">
                                    {{ competitors|length }} concurrent(s) validé(s)
                                </h6>
                                <div class="d-flex flex-wrap gap-2">
                                    {% for competitor in competitors %}
                                        <span class="badge bg-primary fs-6">
                                            <i class="bi bi-building"></i> {{ competitor }}
                                        </span>
                                    {% endfor %}
                                </div>
                                <div class="mt-2">
                                    <a href="{{ path('marketing_competitor_detect', {id: project.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Modifier les concurrents
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {# Actions #}
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-magic"></i>
                    Générer la stratégie marketing
                </button>
                <a href="{{ path('marketing_project_show', {id: project.id}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Retour au projet
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# Informations sur le processus #}
    <div class="card mt-4 bg-light border-0">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-info-circle text-primary"></i>
                Ce que l'IA va générer
            </h6>
            <div class="row g-3 small text-muted">
                <div class="col-md-6">
                    <h6 class="fw-bold text-dark">Stratégie multi-canal</h6>
                    <ul class="mb-0">
                        <li>Répartition budgétaire optimisée par canal</li>
                        <li>Calendrier de campagne personnalisé</li>
                        <li>KPIs et objectifs mesurables</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6 class="fw-bold text-dark">Recommandations IA</h6>
                    <ul class="mb-0">
                        <li>Meilleurs moments de diffusion</li>
                        <li>Messages adaptés au persona</li>
                        <li>Opportunités de marché identifiées</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {# Contexte projet #}
    <div class="card mt-4 bg-primary text-white">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-briefcase-fill"></i>
                Contexte du projet
            </h6>
            <div class="row g-3 small">
                <div class="col-md-3">
                    <strong>Entreprise</strong>
                    <br>{{ project.companyName }}
                </div>
                <div class="col-md-3">
                    <strong>Secteur</strong>
                    <br>{{ project.sector }}
                </div>
                <div class="col-md-3">
                    <strong>Objectif</strong>
                    <br>{{ project.goalType.label }}
                </div>
                <div class="col-md-3">
                    <strong>Budget</strong>
                    <br>{{ project.budget|number_format(2, ',', ' ') }} €
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style des cartes personas (même principe que asset-type-card) */
        .persona-card {
            transition: all 0.2s ease-in-out;
            cursor: pointer;
        }

        .persona-card:hover {
            border-color: var(--bs-primary) !important;
            box-shadow: 0 0.125rem 0.5rem rgba(0, 123, 255, 0.25);
            transform: translateY(-2px);
        }

        .persona-card label {
            margin-bottom: 0;
            user-select: none;
        }

        .persona-checkbox {
            cursor: pointer;
            width: 1.25rem;
            height: 1.25rem;
        }

        .persona-card:has(.persona-checkbox:checked) {
            border-color: var(--bs-primary) !important;
            background-color: rgba(13, 110, 253, 0.05);
            box-shadow: 0 0.25rem 0.75rem rgba(13, 110, 253, 0.3);
        }

        .cursor-pointer {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
