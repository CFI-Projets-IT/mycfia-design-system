{% extends 'layouts/home.html.twig' %}

{% block title %}Génération de stratégie en cours - {{ project.name }}{% endblock %}

{% block content %}
<div class="container" style="max-width: 800px;">
    {# Breadcrumb #}
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_index') }}">Projets Marketing</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('marketing_project_show', {id: project.id}) }}">{{ project.name }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Génération stratégie</li>
            </ol>
        </nav>
    </div>

    {# En-tête avec animation #}
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                {# Spinner animé #}
                <div class="spinner-border text-primary" role="status" style="width: 4rem; height: 4rem;">
                    <span class="visually-hidden">Génération en cours...</span>
                </div>
            </div>

            <h2 class="mb-3">
                <i class="bi bi-graph-up-arrow text-primary"></i>
                Génération de stratégie marketing en cours
            </h2>

            <p class="lead text-muted mb-4">
                L'IA analyse votre projet et génère une stratégie marketing personnalisée...
            </p>

            {# Barre de progression indéterminée #}
            <div class="progress mb-4" style="height: 8px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
                     role="progressbar"
                     style="width: 100%"
                     aria-valuenow="100"
                     aria-valuemin="0"
                     aria-valuemax="100">
                </div>
            </div>

            {# Message de statut dynamique #}
            <div id="status-message" class="alert alert-info" role="status">
                <i class="bi bi-hourglass-split"></i>
                Analyse du secteur et des objectifs...
            </div>
        </div>
    </div>

    {# Informations sur le processus #}
    <div class="card bg-light border-0">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-info-circle text-primary"></i>
                Que fait l'IA en ce moment ?
            </h6>
            <ul class="mb-0 small text-muted">
                <li>Analyse approfondie de votre secteur d'activité</li>
                <li>Étude des personas générés pour identifier les cibles prioritaires</li>
                <li>Sélection des canaux marketing les plus performants</li>
                <li>Optimisation de la répartition budgétaire par canal</li>
                <li>Génération de recommandations stratégiques personnalisées</li>
                <li>Définition du calendrier de campagne optimal</li>
            </ul>
        </div>
    </div>

    {# Informations projet #}
    <div class="card mt-4 bg-primary text-white">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-briefcase-fill"></i>
                Contexte du projet
            </h6>
            <div class="row g-3 small">
                <div class="col-md-3">
                    <strong>Entreprise</strong>
                    <br>{{ project.companyName }}
                </div>
                <div class="col-md-3">
                    <strong>Secteur</strong>
                    <br>{{ project.sector }}
                </div>
                <div class="col-md-3">
                    <strong>Objectif</strong>
                    <br>{{ project.goalType.label }}
                </div>
                <div class="col-md-3">
                    <strong>Budget</strong>
                    <br>{{ project.budget|number_format(2, ',', ' ') }} €
                </div>
            </div>
        </div>
    </div>

    {# Note technique #}
    <div class="text-center mt-4 text-muted small">
        <i class="bi bi-lightning-charge"></i>
        Génération temps réel avec Mercure Hub
    </div>
</div>

{# Stimulus controller pour gérer Mercure EventSource #}
<div
    data-controller="marketing-generation"
    data-marketing-generation-task-id-value="{{ taskId }}"
    data-marketing-generation-mercure-url-value="{{ mercureUrl }}"
    data-marketing-generation-mercure-jwt-value="{{ mercureJwt }}"
    data-marketing-generation-next-url-value="{{ path('marketing_strategy_show', {id: project.id}) }}"
    data-marketing-generation-generation-type-value="strategy"
>
</div>
{% endblock %}
