                    <button class="btn btn-link text-white-50 p-0" type="button" data-bs-dismiss="offcanvas" aria-label="Fermer" style="font-size: 2rem;">
                        <i class="bi bi-arrow-left-circle"></i>
                    </button>
                </div>

                {# Navigation #}
                <nav class="flex-grow-1 overflow-auto px-3">
                    {# Section Favoris #}
                    <div class="nav-section">
                        <div class="nav-section-title-pill" data-bs-toggle="collapse" data-bs-target="#favorisSectionMobile" aria-expanded="true">
                            <div class="d-flex align-items-center gap-2">
