{% extends 'layouts/app.html.twig' %}

{% block title %}Opérations - myCFiia{% endblock %}

{% block main_content %}
<div class="container-fluid" data-controller="datatable">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Opérations Marketing</h2>
                <a href="{{ path('app_operation_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle opération
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Liste des opérations ({{ operations|length }})</h5>
                        <div class="input-group" style="max-width: 300px;">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Rechercher..."
                                data-datatable-target="search"
                                data-action="input->datatable#filter"
                            >
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" data-datatable-target="table">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Statut</th>
                                    <th>Date de création</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for operation in operations %}
                                    <tr>
                                        <td><strong>{{ operation.title }}</strong></td>
                                        <td>{{ operation.description|u.truncate(50, '...') }}</td>
                                        <td>
                                            <span class="badge bg-{{ operation.status == 'completed' ? 'success' : (operation.status == 'in_progress' ? 'warning' : 'secondary') }}">
                                                {{ operation.status == 'completed' ? 'Terminée' : (operation.status == 'in_progress' ? 'En cours' : 'En attente') }}
                                            </span>
                                        </td>
                                        <td>{{ operation.createdAt|date('d/m/Y H:i') }}</td>
                                        <td class="text-end">
                                            <a href="{{ path('app_operation_show', {id: operation.id}) }}" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_operation_edit', {id: operation.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Aucune opération trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
