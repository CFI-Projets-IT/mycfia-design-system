{% extends 'layouts/app.html.twig' %}

{% block title %}Dashboard - myCFiia{% endblock %}

{% block main_content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Tableau de bord</h2>
        </div>
    </div>

    {# Stats Cards #}
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card glass-card">
                <div class="card-body">
                    <h5 class="card-title">Opérations</h5>
                    <p class="card-text display-6">{{ stats.totalOperations }}</p>
                    <small class="text-muted">{{ stats.pendingOperations }} en attente</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass-card">
                <div class="card-body">
                    <h5 class="card-title">Stock</h5>
                    <p class="card-text display-6">{{ stats.totalStock }}</p>
                    <small class="text-muted">Articles en stock</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass-card">
                <div class="card-body">
                    <h5 class="card-title">Factures</h5>
                    <p class="card-text display-6">{{ stats.totalFactures }}</p>
                    <small class="text-muted">Factures totales</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass-card">
                <div class="card-body">
                    <h5 class="card-title">Chat IA</h5>
                    <p class="card-text display-6"><i class="bi bi-chat-dots"></i></p>
                    <small class="text-muted">Assistant intelligent</small>
                </div>
            </div>
        </div>
    </div>

    {# Recent Data Tables #}
    <div class="row g-4">
        {# Recent Operations #}
        <div class="col-lg-6">
            <div class="card glass-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Opérations récentes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Statut</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for operation in operations %}
                                    <tr>
                                        <td>{{ operation.title }}</td>
                                        <td>
                                            <span class="badge bg-{{ operation.status == 'completed' ? 'success' : (operation.status == 'in_progress' ? 'warning' : 'secondary') }}">
                                                {{ operation.status }}
                                            </span>
                                        </td>
                                        <td>{{ operation.createdAt|date('d/m/Y') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {# Recent Stock #}
        <div class="col-lg-6">
            <div class="card glass-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Stock faible</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stock in stocks %}
                                    <tr>
                                        <td>{{ stock.name }}</td>
                                        <td>
                                            <span class="badge bg-{{ stock.quantity < 50 ? 'danger' : 'success' }}">
                                                {{ stock.quantity }}
                                            </span>
                                        </td>
                                        <td>{{ stock.unitPrice }} €</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Recent Factures #}
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Factures récentes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Référence</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for facture in factures %}
                                    <tr>
                                        <td>{{ facture.reference }}</td>
                                        <td>{{ facture.totalAmount }} €</td>
                                        <td>
                                            <span class="badge bg-{{ facture.status == 'paid' ? 'success' : (facture.status == 'pending' ? 'warning' : 'danger') }}">
                                                {{ facture.status }}
                                            </span>
                                        </td>
                                        <td>{{ facture.invoiceDate|date('d/m/Y') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
